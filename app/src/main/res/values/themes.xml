<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoinChart" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowNoTitle">true</item>


        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    
    <style name="Theme.CoinChart.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/orange</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/sp</item>
        <item name="postSplashScreenTheme">@style/Theme.CoinChart</item>
    </style>


</resources>